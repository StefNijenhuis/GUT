<%= include_gon %>
<%= javascript_include_tag "methods.js" %>

<header>
    <div class="user">
        <div class="username">
            Deze test is gemaakt door:
            <span><%= @test.user.email %></span>
        </div>
    </div>

    <h3><%= @test.title %></h3>
</header>

<div id="timer" data-time="1"></div>

<div id="test">
	
    <div class="step" data-step="1">
        <h2>Stap 1</h2>
        <%= @test.introtext %>
        <p>Je hebt 10 seconden om de volgende afbeelding in je op te nemen.</p>

        <button class="btn nextButton">Begin met test</button>
    </div>

    <div class="step" data-step="2">
            <div class="abcontainer">
                <%= image_tag @test.product.url(:gray) %>
            </div>
    </div>

    <div class="step" data-step="3">
        <h2>Stap 3</h2>
        
        <%= simple_form_for :result, :url => {:action => :create, :controller => "results"} do |f| %>
            
            <%= f.label "Waar denk je dat deze afbeelding voor dient?" %>
            <%= f.text_area :q1 %>

            <%= f.submit "Opslaan" %>
        <% end %> 

    </div>
 
</div>