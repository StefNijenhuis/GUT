<script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53579f7224643a4a"></script>

<% if @test.methodname === 1 %>
	<div id="test">
		<div class="step currentStep well" data-step="1">
            <h1>Stap 1</h1>
            <p>Je hebt 10 seconden om de volgende afbeelding in je op te nemen.</p>
        	<div class="nextButton">Begin met de test</div>
    	</div>
    	<div class="step well" data-step="2">
            <h1>Stap 2</h1>

            <%= image_tag("homer.jpg") %>
            <div class="timer" data-timer="10"></div>

        </div>

        <div class="step well" data-step="3">
             <h1>Stap 3</h1>
             <form> 
                    <label for="response">Wat heb je onthouden?</label>
                    <input type="text" name="response[]" placeholder="in woorden">
                    <input type="text" name="response[]" placeholder="in woorden">
                    <input type="text" name="response[]" placeholder="in woorden">
                    <input type="text" name="response[]" placeholder="in woorden">
                    <input type="text" name="response[]" placeholder="in woorden">
             </form>

             <div class="nextButton btn btn-primary btn-lg">Volgende</div> 
        </div>
        
        <div class="step well" data-step="4">
            <h1>Stap 4</h1>  
            <div class="endButton" data-end="true">Einde test</div>
        </div>  
    </div>
<% elsif @test.methodname === 2 %>

<% end %>

<h1><%=  @test.title %> </h1>
<h2>Testmethode: <%= @methodname %> </h2>
<h1><%=  @test.start_date.to_formatted_s(:month_and_day_and_year) %> </h1>

<h1><%=  @test.end_date.to_formatted_s(:month_and_day_and_year) %> </h1>
<%=raw @test.introtext %> 

<div class="addthis_toolbox addthis_default_style ">
<a class="addthis_button_preferred_1"></a>
<a class="addthis_button_preferred_2"></a>
<a class="addthis_button_preferred_3"></a>
<a class="addthis_button_preferred_4"></a>
<a class="addthis_button_compact"></a>
<a class="addthis_counter addthis_bubble_style"></a>
</div>

<% if current_user.id == @test.user_id %>
	<%=	link_to "bewerken", edit_usertest_path(@test) %>
<% end %>
<%= link_to "Terug naar overzicht", usertests_path() %>