<h1>Nieuwe test</h1>
<%= simple_form_for :usertest, url: usertests_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.input :introtext, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Empty'} } %>
  </p>
 
  <p>
    <%= f.label :start_date %>
   <%= date_select :usertest, :start_date %>

  </p>

    <p>
    <%= f.label :end_date %>
   <%= date_select :usertest, :end_date %>
    </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>